{
  "name": "Trello Card Aging",
  "version": "1.1",
  "description": "Simulate the Card Aging Power Up",
  "manifest_version": 2,
  "content_scripts": [{
        "matches": ["https://trello.com/b/*"],
        "js": ["jquery-3.1.0.js", "logic.js"],
        "run_at": "document_start"
    }],
  "icons": {
    "64": "icon64.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },  
  "browser_action": {
    "default_icon": "icon64.png"
  },
  "author": "fernand-o",
  "background": {
      "scripts": [ "background.js" ]
   },  
  "permissions": [ "tabs", "https://trello.com/b/*" ]
}